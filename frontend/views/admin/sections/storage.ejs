<!-- Storage Management Section -->
<div class="admin-storage-section">
    <!-- Storage Stats Card -->
    <div class="admin-card">
        <h2 class="admin-card-title"><i class="fas fa-database"></i> Storage Usage</h2>
        
        <div class="storage-stats">
            <div class="storage-stat">
                <span class="storage-stat-label">Total Storage:</span>
                <span class="storage-stat-value" id="total-storage">-</span>
            </div>
            
            <div class="storage-stat">
                <span class="storage-stat-label">Used:</span>
                <span class="storage-stat-value" id="used-storage">-</span>
            </div>
            
            <div class="storage-stat">
                <span class="storage-stat-label">Available:</span>
                <span class="storage-stat-value" id="available-storage">-</span>
            </div>
        </div>
        
        <div class="storage-progress">
            <div class="storage-progress-bar" id="storage-progress-bar">0%</div>
        </div>
    </div>
    
    <!-- Files Card -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title"><i class="fas fa-file-audio"></i> Files</h2>
            <button class="admin-btn admin-btn-primary" id="upload-file-btn">
                <i class="fas fa-upload"></i> Upload File
            </button>
        </div>
        
        <div class="admin-table-container">
            <table class="admin-table" id="files-table">
                <thead>
                    <tr>
                        <th>Filename</th>
                        <th>Type</th>
                        <th>Size</th>
                        <th>Uploaded</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5">Loading files...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Upload Modal Form -->
    <div class="admin-modal" id="upload-modal">
        <div class="admin-modal-content">
            <div class="admin-modal-header">
                <h3 class="admin-modal-title">Upload File</h3>
                <button class="admin-modal-close" onclick="document.getElementById('upload-modal').classList.remove('active')">Ã—</button>
            </div>
            
            <form id="upload-form">
                <div class="admin-form-group">
                    <label class="admin-form-label" for="file-upload">Select File</label>
                    <input type="file" id="file-upload" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="file-path">File Path (optional)</label>
                    <input type="text" id="file-path" class="admin-form-input" placeholder="e.g., songs/rock">
                    <small class="admin-form-help">Leave empty to upload to default folder</small>
                </div>
                
                <div class="admin-form-actions">
                    <button type="button" class="admin-btn" onclick="document.getElementById('upload-modal').classList.remove('active')">Cancel</button>
                    <button type="submit" class="admin-btn admin-btn-primary" id="upload-submit">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div> 