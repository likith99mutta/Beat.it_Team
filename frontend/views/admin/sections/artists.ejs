<!-- Artists & Albums Management Section -->
<div class="admin-artists-section">
    <!-- Tabs -->
    <div class="admin-tabs">
        <div class="admin-tab active" id="artists-tab">Artists</div>
        <div class="admin-tab" id="albums-tab">Albums</div>
    </div>
    
    <!-- Artists Tab Content -->
    <div class="tab-content active" id="artists-content">
        <div class="admin-card">
            <div class="admin-card-header">
                <h2 class="admin-card-title"><i class="fas fa-users"></i> Artists</h2>
                <button class="admin-btn admin-btn-primary" id="add-artist-btn">
                    <i class="fas fa-plus"></i> Add Artist
                </button>
            </div>
            
            <div class="admin-table-container">
                <table class="admin-table" id="artists-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Albums</th>
                            <th>Songs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="4">Loading artists...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Albums Tab Content -->
    <div class="tab-content" id="albums-content">
        <div class="admin-card">
            <div class="admin-card-header">
                <h2 class="admin-card-title"><i class="fas fa-compact-disc"></i> Albums</h2>
                <button class="admin-btn admin-btn-primary" id="add-album-btn">
                    <i class="fas fa-plus"></i> Add Album
                </button>
            </div>
            
            <div class="admin-table-container">
                <table class="admin-table" id="albums-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Artist</th>
                            <th>Year</th>
                            <th>Songs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="5">Loading albums...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Artist Modal Form -->
    <div class="admin-modal" id="artist-modal">
        <div class="admin-modal-content">
            <div class="admin-modal-header">
                <h3 class="admin-modal-title" id="artist-modal-title">Add New Artist</h3>
                <button class="admin-modal-close" onclick="document.getElementById('artist-modal').classList.remove('active')">×</button>
            </div>
            
            <form id="artist-form" data-mode="add">
                <div class="admin-form-group">
                    <label class="admin-form-label" for="artist-name">Name</label>
                    <input type="text" id="artist-name" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="artist-bio">Bio</label>
                    <textarea id="artist-bio" class="admin-form-input" rows="4"></textarea>
                </div>
                
                <div class="admin-form-actions">
                    <button type="button" class="admin-btn" onclick="document.getElementById('artist-modal').classList.remove('active')">Cancel</button>
                    <button type="submit" class="admin-btn admin-btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Album Modal Form -->
    <div class="admin-modal" id="album-modal">
        <div class="admin-modal-content">
            <div class="admin-modal-header">
                <h3 class="admin-modal-title" id="album-modal-title">Add New Album</h3>
                <button class="admin-modal-close" onclick="document.getElementById('album-modal').classList.remove('active')">×</button>
            </div>
            
            <form id="album-form" data-mode="add">
                <div class="admin-form-group">
                    <label class="admin-form-label" for="album-title">Title</label>
                    <input type="text" id="album-title" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="album-artist">Artist</label>
                    <select id="album-artist" class="admin-form-input" required>
                        <option value="">Select Artist</option>
                    </select>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="album-year">Year</label>
                    <input type="number" id="album-year" class="admin-form-input" min="1900" max="2099">
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="album-description">Description</label>
                    <textarea id="album-description" class="admin-form-input" rows="3"></textarea>
                </div>
                
                <div class="admin-form-actions">
                    <button type="button" class="admin-btn" onclick="document.getElementById('album-modal').classList.remove('active')">Cancel</button>
                    <button type="submit" class="admin-btn admin-btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div> 