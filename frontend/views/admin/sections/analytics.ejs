<!-- Analytics Section -->
<div class="admin-analytics-section">
    <!-- Time Range Selector -->
    <div class="admin-card">
        <div class="admin-filters">
            <label for="time-range-select">Time Range:</label>
            <select id="time-range-select" class="admin-form-input">
                <option value="7days">Last 7 Days</option>
                <option value="30days">Last 30 Days</option>
                <option value="90days">Last 3 Months</option>
                <option value="1year">Last Year</option>
                <option value="all">All Time</option>
            </select>
            
            <button class="admin-btn export-data-btn" data-type="all">
                <i class="fas fa-download"></i> Export Data
            </button>
        </div>
    </div>
    
    <!-- Charts Grid -->
    <div class="admin-charts-grid">
        <!-- User Growth Chart -->
        <div class="admin-card chart-container">
            <h2 class="admin-card-title"><i class="fas fa-user-plus"></i> User Growth</h2>
            <div class="chart-wrapper">
                <canvas id="user-growth-chart"></canvas>
            </div>
            <button class="admin-btn export-data-btn" data-type="users">
                <i class="fas fa-download"></i> Export
            </button>
        </div>
        
        <!-- Songs by Genre Chart -->
        <div class="admin-card chart-container">
            <h2 class="admin-card-title"><i class="fas fa-music"></i> Songs by Genre</h2>
            <div class="chart-wrapper">
                <canvas id="songs-by-genre-chart"></canvas>
            </div>
            <button class="admin-btn export-data-btn" data-type="genres">
                <i class="fas fa-download"></i> Export
            </button>
        </div>
        
        <!-- Plays by Time Chart -->
        <div class="admin-card chart-container">
            <h2 class="admin-card-title"><i class="fas fa-play-circle"></i> Song Plays</h2>
            <div class="chart-wrapper">
                <canvas id="plays-by-time-chart"></canvas>
            </div>
            <button class="admin-btn export-data-btn" data-type="plays">
                <i class="fas fa-download"></i> Export
            </button>
        </div>
        
        <!-- Top Artists Chart -->
        <div class="admin-card chart-container">
            <h2 class="admin-card-title"><i class="fas fa-crown"></i> Top Artists</h2>
            <div class="chart-wrapper">
                <canvas id="top-artists-chart"></canvas>
            </div>
            <button class="admin-btn export-data-btn" data-type="artists">
                <i class="fas fa-download"></i> Export
            </button>
        </div>
    </div>
</div> 