<!-- Users Management Section -->
<div class="admin-users-section">
    <!-- Users Card -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title"><i class="fas fa-user"></i> Users</h2>
            <button class="admin-btn admin-btn-primary" id="add-user-btn">
                <i class="fas fa-plus"></i> Add User
            </button>
        </div>
        
        <div class="admin-table-container">
            <table class="admin-table" id="users-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5">Loading users...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- User Modal Form -->
    <div class="admin-modal" id="user-modal">
        <div class="admin-modal-content">
            <div class="admin-modal-header">
                <h3 class="admin-modal-title" id="user-modal-title">Add New User</h3>
                <button class="admin-modal-close" onclick="document.getElementById('user-modal').classList.remove('active')">Ã—</button>
            </div>
            
            <form id="user-form" data-mode="add">
                <div class="admin-form-group">
                    <label class="admin-form-label" for="user-username">Username</label>
                    <input type="text" id="user-username" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="user-email">Email</label>
                    <input type="email" id="user-email" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group" id="password-container">
                    <label class="admin-form-label" for="user-password">Password</label>
                    <input type="password" id="user-password" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="user-role">Role</label>
                    <select id="user-role" class="admin-form-input" required>
                        <option value="user">User</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                
                <div class="admin-form-actions">
                    <button type="button" class="admin-btn" onclick="document.getElementById('user-modal').classList.remove('active')">Cancel</button>
                    <button type="submit" class="admin-btn admin-btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div> 