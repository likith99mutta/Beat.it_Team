<!-- Songs Management Section -->
<div class="admin-songs-section">
    <!-- Songs Card -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title"><i class="fas fa-music"></i> Songs</h2>
            <button class="admin-btn admin-btn-primary" id="add-song-btn">
                <i class="fas fa-plus"></i> Add Song
            </button>
        </div>
        
        <div class="admin-table-container">
            <table class="admin-table" id="songs-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Artist</th>
                        <th>Album</th>
                        <th>Duration</th>
                        <th>Plays</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="6">Loading songs...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Song Modal Form -->
    <div class="admin-modal" id="song-modal">
        <div class="admin-modal-content">
            <div class="admin-modal-header">
                <h3 class="admin-modal-title" id="song-modal-title">Add New Song</h3>
                <button class="admin-modal-close" onclick="document.getElementById('song-modal').classList.remove('active')">Ã—</button>
            </div>
            
            <form id="song-form" data-mode="add">
                <div class="admin-form-group">
                    <label class="admin-form-label" for="song-title">Title</label>
                    <input type="text" id="song-title" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="song-artist">Artist</label>
                    <input type="text" id="song-artist" class="admin-form-input" required>
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="song-album">Album</label>
                    <input type="text" id="song-album" class="admin-form-input">
                </div>
                
                <div class="admin-form-group">
                    <label class="admin-form-label" for="song-genre">Genre</label>
                    <input type="text" id="song-genre" class="admin-form-input">
                </div>
                
                <div class="admin-form-group" id="song-file-container">
                    <label class="admin-form-label" for="song-file">Song File (MP3)</label>
                    <input type="file" id="song-file" class="admin-form-input" accept="audio/mp3,audio/mpeg">
                </div>
                
                <div class="admin-form-actions">
                    <button type="button" class="admin-btn" onclick="document.getElementById('song-modal').classList.remove('active')">Cancel</button>
                    <button type="submit" class="admin-btn admin-btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div> 